<%= form_for @list do |f| %>
  <% if @list.errors.any? %>
    <div id="error_explanation" class="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %>:</h2>

      <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit "Salvar", class: 'btn btn-primary' %>
  </div>
<% end %>
